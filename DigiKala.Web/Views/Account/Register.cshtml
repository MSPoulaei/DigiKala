@model DigiKala.Core.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">عضویت در دیجی کالا</h4>

<hr />

<form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @*<label asp-for="Mobile" class="control-label"></label>*@
        <input asp-for="Mobile" class="form-control mt-2" placeholder="شماره موبایل" />
        <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control mt-2" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control mt-2" placeholder="تایید کلمه عبور" />
        <span asp-validation-for="ConfirmPassword" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="عضویت" class="btn btn-primary btn-lg btn-block btn-submit mt-2" />
    </div>
</form>


<div>
    <h5 class="mt-2"><a asp-action="Index">قبلا ثبت نام کرده ام</a></h5>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
