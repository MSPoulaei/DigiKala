@model DigiKala.Core.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">ورود به حساب</h4>

<hr />

<form asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @*<label asp-for="Mobile" class="control-label"></label>*@
        <input asp-for="Mobile" class="form-control mt-2" placeholder="شماره موبایل" />
        <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control mt-2" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger validation-error"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label mt-2">
            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
        </label>
    </div>

    <div class="form-group">
        <input type="submit" value="ورود" class="btn btn-primary btn-lg btn-block btn-submit mt-2" />
    </div>
</form>


<div class="form-group">
    <h6 class="mt-2"><a asp-action="ForgetPassword">فراموشی کلمه عبور</a></h6>
</div>
<div class="form-group">
    <h6 class="mt-2"><a asp-action="Register">حساب ندارید؟ ثبت نام کنید</a></h6>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
