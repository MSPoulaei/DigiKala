@model DigiKala.Core.ViewModels.ForgetPasswordViewModel

@{
    ViewData["Title"] = "فراموشی کلمه عبور";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">فراموشی کلمه عبور حساب در دیجی کالا</h4>

<hr />

<form asp-action="ForgetPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Mobile" class="form-control mt-2" placeholder="شماره موبایل" />
        <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ارسال پیامک کد تایید" class="btn btn-primary btn-lg btn-block btn-submit mt-2" />
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
